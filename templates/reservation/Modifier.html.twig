                                                </div>
                                            </div>
                                             <div class="form-group">
                                                <label >Salle :</label>
                                                <div class="col-10">
                                                    {{ form_widget(form.idsa, { 'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form.idsa, { 'attr': {'class': 'form-control'} }) }}

                                                </div>
                                            </div>
                                          
                                          
                                     
                                            <div class="form-group text-center">
                                            <div class="card-tools"><button class="btn btn-danger"  style="width: 50%">{{ button_label|default('Modifier') }}</button></div>
                                            </div>
                                        </div>
    
       
    </div>
    </section>
    {{ form_end(form) }}
{% endblock %}