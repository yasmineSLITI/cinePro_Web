        <div class="row">
          <div class="col-lg-6">
            <div class="card">
             
              <div class="card-body">
              
                  <canvas id="myPieChartStock" width="250" height="150"></canvas>
              </div>

            </div>
            <!-- /.card -->

            <div class="card">
              <div class="card-header border-0">
                <h3 class="card-title">Products</h3>
                <div class="card-tools">
                  <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-download"></i>
                  </a>
                  <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-bars"></i>
                  </a>
                </div>
              </div>
              <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                  <thead>
                  <tr>
                    <th>Produit</th>
                    <th>Prix Vente Unitaire</th>
                    <th>Profitabilité</th>
                  </tr>
                  </thead>
                  <tbody>
                  {%for Produit in Produits%}

                  {% set profit = 0 %}
                  <tr>
                    <td>
                      <img src="{{ asset('uploads/'~ Produit.image) }}" alt="Product 1" class="img-circle img-size-32 mr-2">
                      {{Produit.Designation}}
                    </td>
                    <td>${{Produit.prixVenteUnit}} USD</td>
                    <td>
            
                      {% set profit = (Produit.prixVenteUnit-Produit.prixAchatUnit)/Produit.prixAchatUnit %} 

                      {%if profit>0%}

                        <small class="text-success mr-1">
                        <i class="fas fa-arrow-up"></i>
                        {{ "%.2f"|format(profit) }}
                        </small>

                      {%elseif profit<0%}

                       <small class="text-danger mr-1">
                        <i class="fas fa-arrow-down"></i>
                        {{ "%.2f"|format(profit) }}
                      {%else%}

                      <small class="text-warning mr-1">
                        <i class="fas fa-arrow-down"></i>
                        {{ "%.2f"|format(profit) }}
                      </small>

                      </small>  

                      {%endif%}
                    
                        
                      
                      
                    </td>
                   
                  </tr>
                   {%endfor%}
                  </tbody>
                </table>
              </div>
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col-md-6 -->
          <div class="col-lg-6">
            <div class="card">
             
              <div class="card-body">
              
