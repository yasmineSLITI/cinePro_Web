              </div>
              
            </div>
            <!-- /.card -->
            <div class="card">
             
              <div class="card-body">
              
                  <canvas id="myChart" width="250" height="150"></canvas>
              </div>
              
           </div>
  
          </div>
          <!-- /.col-md-6 -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </div>
