{% extends 'baseBackOffice.html.twig'%}
    {% block backContainer %}
        
<style>
  .content-table{
                border-collapse: collapse;
                margin: 25px 0;
                font-size: 0.9em;
                min-width: 400px;
                border-radius: 5px 5px 0 0;
                overflow: scroll;
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
                text-align: center;
                margin-left: auto;
    margin-right: auto;
              }
              
              .content-table thead tr {
                background-color: #D10000;
                color: #ffffff;
                text-align: left;
                font-weight: bold;
              }
              
              .content-table th,
              .content-table td {
                padding: 12px 15px;
              }
              
              .content-table tbody tr {
                border-bottom: 1px solid #dddddd;
              }
              
              .content-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
              }
              
              .content-table tbody tr:last-of-type {
                border-bottom: 2px solid #D10000;
              }
              
              .content-table tbody tr.active-row {
                font-weight: bold;
                color: #D10000;
                
              }
              .heads{
            position: sticky;}
            
}
</style>
        <header> 
            
      
    <h1>Liste des demandes de sponsoring : </h1> 
   
    </header>
    <section>
<table class = "content-table">
    <thead>
    <tr>
    <th>ID de la demande</th>
    <th>Nom de sponsor</th>
    <th>Etat d'acceptation</th>
    <th>Description</th>
    <th>Paquet</th>
    <th></th>
    
    
    </tr>  
    </thead>
    <tbody>
        
    <tr {% for d in demande %}>
        <td>{{d.iddemande}}</td>
        <td>{{d.idsp.username}}</td>
        <td>{{d.etataccept}}</td>
        <td>{{d.description}}</td>
        <td>{{d.paquet}}</td>
        <td>    
        {% if d.etataccept == "En attente" %}
            <a href="{{ path("accepterDemande",{"id":d.iddemande}) }}"><img src = "../dist/img/k.png" width="20" height="30"></a>
            <a href="{{ path("refuserDemande",{"id":d.iddemande}) }}"><img src = "../dist/img/x.png" width="20" height="30"></a>
        {% endif %}  
        </td >
        <tr{% else %}>
          <td colspan="5">Aucune demande de sponsoring</td>
        </tr {% endfor %}>
    </tbody>
  </table>
    </section>
    {{ knp_pagination_render(
      demande,
      '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig',
      {
          'queryParam1': 'param1 value',
          'queryParam2': 'param2 value'
      },
      {
          'viewParam1': 'param1 value',
          'viewParam2': 'param2 value'
      },
      {'align': 'center',
      'size': 'large',
      'rounded': true,}
  ) }} 
{% endblock %} 