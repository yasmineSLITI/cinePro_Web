{% extends 'baseFrontOffice.html.twig'%}
    
    {% block frontContainer %} 

        {% block body %} 
            
            <h1>Modifier votre demande d'ajout d'un evenement </h1>
            <a href="{{ path("affiche")}}" class="btn btn-dark">Lister mes demande</a>
            {{form_start (form)}}
            <div class "form-group">
                <label for ="">Nom de l'evenement :</label>
                {{form_errors (form.nomev)}}
                {{form_widget (form.nomev)}}
            </div>
            <div class "form-group">
                <label for ="">Descritption de la demande :</label>
                {{form_errors (form.description)}}
                {{form_widget (form.description)}}
            </div>
            <div class "form-group">
                <label for ="">Montant demandé :</label>
                {{form_errors (form.montant)}}
                {{form_widget (form.montant)}}
            </div>
            <div class "form-group">
                <label for ="">Durée proposée :</label>
                {{form_row (form.duree)}}
                
            </div>{{form_end (form)}}
            
            
        {% endblock %}
    {% endblock %} 
